//- maki-datastore
//- is a top-level manager of data
//- maps /path to <hash>
dom-module#maki-datastore
  template
    maki-crypto-worker(name="datastore")
    maki-key-value(name="tips", for$="{{name}}")
    maki-key-value(name$="{{name}}")
  script(src="/assets/nedb.min.js", async)
  script(src="/assets/lodash.min.js", async)
  script(src="/js/json-patch-duplex.min.js", async)
  script.
    Polymer({
      is: 'maki-datastore',
      properties: {
        name: { 
          type: String
        },
        for: { 
          type: String
        },
        db: {
          type: Object
        },
        fabric: {
          type: Object
        },
        tips: {
          type: Object
        },
        private: {
          type: Boolean
        },
        resources: {
          type: Object,
          value: {}
        },
        datastores: {
          type: Object,
          value: {}
        }
      },
      listeners: {
        'datastore:miss':   '_handleMiss',
        'datastore:change': '_handleChange',
        'datastore:patch':  '_handlePatch',
      },
      _query: function(path, query, opts, cb) {
        var self = this;
        var name = self.name;
        if (typeof opts === 'function') {
          cb = opts;
          opts = {};
        }

        console.log('[QUILL:DATASTORE]', name, '_query', 'incoming:', path, query, opts);

        // TODO: not do this
        //var application = document.querySelector(self.for + '-application');
        var application = document.querySelector('maki-application');
        var definition = application._pathToResource(path);
        var resource = application.datastores[definition.name];
        
        console.log('[QUILL:DATASTORE]', name, '_query', 'dat path', path, resource);
        
        resource.store.find(query, function(err, docs) {
          console.log('[QUILL:DATASTORE]',name, '_query', 'dat result', err, docs);
          cb(err, docs);
        });
      },
      _insert: function(path, obj, cb) {
        var self = this;
        var id = obj['id'];

        self._get(path, function(err, collection) {
          if (!collection || !(collection instanceof Array)) {
            collection = [];
          }
          var keys = {};

          keys[id] = obj;
          
          console.log('[QUILL:DATASTORE]', '_insert', 'collection:', collection);

          collection.forEach(function(x) {
            keys[x['id']] = x;
          });
          
          var ids = collection.map(function(x) {
            return x['id'];
          });
          
          collection = _.union(ids, [ id ]).map(function(id) {
            return keys[id]['@id'];
          });
          
          collection.sort(function(a, b) {
            if (a['changed'] && b['changed']) {
              return b['changed'] - a['changed'];
            } else if (a['created'] && b['created']) {
              return b['created'] - a['created'];
            } else {
              return a - b;
            }
          });
          
          self._put(path, collection, cb);
        });
      },
      _post: function(path, obj, cb) {
        // TODO: middlewares
        var self = this;
        console.log('[QUILL:DATASTORE]', '_post', '_publish', 'adding', path, obj);

        self.tips._get(path, function(err, tip) {
          if (err) console.error('[QUILL:DATASTORE]', '_post', 'tip retrieval err:', err);
          self.docs._get(tip, {
            convert: true
          }, function(err, collection) {
            if (err) console.error('[QUILL:DATASTORE]', '_post', 'getTip error:', err);
            if (!collection) {
              collection = [];
            }
            if (!(collection instanceof Array)) {
              console.error('[QUILL:DATASTORE]', '_post', 'getTip not collection', collection);
              return cb('Tip exists, but does not store a collection.');
            }
            
            console.log('[QUILL:DATASTORE]', '_post', '_publish', 'getTip results', collection);
            
            self._put(path + '/' + obj['id'], obj, function(err, doc) {
              if (err) console.error('[QUILL:DATASTORE]', '_post', '_put', 'callback', path + '/' + obj['id'], err);
              // TODO: remove this condition, understand where and why `null`
              // happens to `doc` sometimes...
              if (doc) {
                collection.unshift(doc);
              }

              console.error('[QUILL:DATASTORE]', '_post', '_publish', 'collection (before):', path, collection);

              collection = collection.map(function(x) {
                if (x['@id']) {
                  return x['@id'];
                } else {
                  return x;
                }
              });
              collection = JSON.parse(JSON.stringify(collection));
              
              console.error('[QUILL:DATASTORE]', '_post', '_publish', 'collection (after):', path, collection);
              
              self._put(path, collection, function(err) {
                if (err) console.error('[QUILL:DATASTORE]', '_post', '_publish', 'adding result', err);
                return cb(err, doc);
              });
            });
          });
        });
      },
      _put: function(path, val, cb) {
        // TODO: middlewares
        var self = this;
        var name = self.name;

        self._bundle(val, function(err, obj) {
          console.log('[QUILL:DATASTORE]', '_put', '_post', '_bundle', '_publish', 'output', obj);

          if (err) console.error(err);
          if (!obj) console.log('[QUILL:DATASTORE]', '_put', 'grave concern!  no obj from bundle', path, val);
          if (!obj['@id']) console.log('[QUILL:DATASTORE]', '_put', 'grave concern!  no @id from bundle', obj);
            
          /*if (obj['@id'] === val['@id']) {
            return cb(null, obj);
          }*/
          
          self.docs._set(obj['@id'], obj, function(err) {
            if (err) console.error(err);

            console.log('[QUILL:DATASTORE]', name, '_put', '_publish', 'setting tip...', path, obj['@id']);

            self.tips._set(path, obj['@id'], function(err) {
              if (err) console.error(err);

              console.log('[QUILL:DATASTORE]', name, '_put', '_publish', 'set the tip!', path, obj);

              self._flatten(obj, function(err, doc) {
                //var application = document.querySelector(self.for + '-application');
                var application = document.querySelector('maki-application');

                // TODO: not do this.  maybe use the `private` property?
                if (!application) {
                  console.error('[QUILL:DATASTORE]', name, '_put', '_publish', 'could not find application', self.for);
                  return cb('no `maki-application` element found');
                }
                  
                var definition = application._pathToResource(path);
                var resource = application.datastores[definition.name];

                console.log('[QUILL:DATASTORE]', 'datastores:', application.datastores);
                console.log('[QUILL:DATASTORE]', 'looking for:', definition.name);
                console.log('[QUILL:DATASTORE]', 'resource resolved:', resource);
                

                console.log('[QUILL:DATASTORE]', 'quill resource is listening!  beginning work...');
                
                resource.store.insert(obj, function(err, result) {
                  if (err) console.error('[QUILL:DATASTORE]', name, '_put', '_publish', 'store.insert:', err);
                  
                  self.fire('datastore:change', {
                    path: path,
                    val: obj,
                    old: undefined
                  });

                  console.log('[QUILL:DATASTORE]', name, '_put', '_publish', 'shared:', path, obj, result);

                  return cb(err, obj);
                });
              });
            });
          });
        });
      },
      _update: function(path, query, updates, opts, cb) {
        var self = this;
        
        console.log('[QUILL:DATASTORE]', '_update', self.for);
        console.log('[QUILL:DATASTORE]', '_update', path, query, updates, opts);
        console.log('[QUILL:DATASTORE]', '_update', 'updates:', updates, 'opts:', opts);

        var application = document.querySelector(self.for + '-application');
        var resource = application._pathToResource(path);
        resource.store.update(query, updates, opts, cb);
      },
      _upsert: function(path, query, item, cb) {
        var self = this;
        self._update(path, query, item, {
          upsert: true
        }, function(err, numAffected) {
          console.log('[QUILL:DATASTORE]', '_upsert end', err, numAffected);
          cb(err);
        });
      },
      _flatten: function(item, cb) {
        var self = this;
        window.traverse(item, function(node, next) {
          var context = this;
          if (context.isRoot) return next();
          var key = context.key;
          var val = context.parent[key];
          if (val && val['@id']) {
            context.parent[key] = val['@id'];
          }
          next();
        }, function(final) {
          cb(null, final);
        });
      },
      // HTTP-emulated GET request
      _get: function(uri, cb) {
        // TODO: middlewares
        var self = this;
        var name = self.name;

        var parser = document.createElement('a');
        parser.href = uri;
        
        var path = parser.pathname;


        console.log('[QUILL:DATASTORE]', '_get', 'looking for:', uri);
        console.log('[QUILL:DATASTORE]', '_get', 'callback:', cb);
        
        console.log('[QUILL:DATASTORE]', '_get', 'parsed path name:', path);

        if (!self.tips) return cb('Not ready');

        self.tips._get(path, function(err, tip) {
          if (err) console.error('[QUILL:DATASTORE]', '_get', path, err);

          console.log('[QUILL:DATASTORE]', name, '_get', path, 'tip is:', tip);

          self.docs._get(tip, {
            convert: true,
            //hydrate: true
          }, function(err, obj) {
            if (err || !obj) {
              obj = [];
            }
            
            console.log('[QUILL:DATASTORE]', name, '_get', 'db.get', 'will traverse:', err, tip, obj);
            function resolveReferences(node, next) {
              var context = this;
              var key = context.key;
              console.log('[QUILL:DATASTORE]', name, '_get', 'traverse', 'key', key, context, node);
              if (typeof node !== 'string') return next();
              if (key === '@id') return next();

              console.log('[QUILL:DATASTORE]', name, '_get', 'traverse', 'populating', key);
              self.docs._get(node, {
                convert: true
              }, function(err, item) {
                if (err) console.error('[QUILL:DATASTORE]', '_get', 'error:', err);
                if (!item) return next();
                console.log('[QUILL:DATASTORE]', name, '_get', 'key:', key, 'found:', item);
                console.log('[QUILL:DATASTORE]', name, '_get', 'key:', key, 'replacing:', key, 'with', item, 'in', context.parent);
                
                console.log('[QUILL:DATASTORE]', name, '_get', 'key:', key, 'was:', context.parent[key], 'in', context.parent);
                context.parent[key] = item;
                console.log('[QUILL:DATASTORE]', name, '_get', 'key:', key, 'now:', context.parent[key]);
                console.log('[QUILL:DATASTORE]', name, '_get', 'deep diving...', item);
                // deep dive.
                window.traverse(item, resolveReferences, function(inner) {
                  if (!inner) return next();
                  console.log('[QUILL:DATASTORE]', name, '_get', 'inner:', inner);
                  next();
                });
              });
            }
            
            // TODO: make modular
            window.traverse(obj, resolveReferences, function(final) {
              console.log('[QUILL:DATASTORE]', '_get', path, 'final:', null, final);
              return cb(null, final);
            });
          });
        });

        /*self.docs._get(key, function(err, val) {
          if (err) console.error(err);
          if (val) return cb(null, val) && self.fire('datastore:miss', key);
          self.fire('datastore:miss', key);
          return cb('datastore:miss');
        });*/
      },
      _patch: function(key, ops, cb) {
        // TODO: middlewares
        var self = this;
        console.log('[QUILL:DATASTORE]', 'datastore:patch:', key, ops);
        self._get(key, function(err, obj) {
          if (err) console.error(err);
          console.log('[QUILL:DATASTORE]', 'applying to:', obj);
          jsonpatch.apply(obj, ops);
          console.log('[QUILL:DATASTORE]', 'obj now:', obj);
          self._put(key, obj, function(err) {
            if (err) console.error(err);
          });
        });
      },
      _unbundle: function(obj, cb) {
        
      },
      _bundle: function(obj, cb) {
        var self = this;
        console.log('[QUILL:DATASTORE]', '_bundle', '_post', 'pre-parse', obj);
        obj['@id'] = undefined;
        console.log('[QUILL:DATASTORE]', '_bundle', '_post', 'post-parse', obj);
        var worker = document.querySelector('maki-crypto-worker[name=datastore]');
        
        console.log('[QUILL:DATASTORE]', '_bundle', '_post', 'worker:', worker);
        
        worker._digest(obj, function(err, hash) {
          console.log('[QUILL:DATASTORE]', '_bundle', '_put', '_post', 'post-parse digest:', hash);
          obj['@id'] = hash;
          cb(err, obj);
        });
      },
      _handleMiss: function(e, detail) {
        return;
        var self = this;
        var key = e.detail;
        console.log('[QUILL:DATASTORE]', '_handleMiss', e, detail);
        if (self.private) return;
        
        // TODO: query network instead of server
        $.getJSON(key, function(data) {
          console.log('[QUILL:DATASTORE]', 'retrieved (from remote)', data);
          if (!data) return;
          self._put(key, data, function(err) {
            if (err) console.error('[QUILL:DATASTORE]', '_handeMiss error:', err);
          });
        });
      },
      _handlePatch: function(e) {
        var self = this;
        console.log('[QUILL:DATASTORE]', '_handlePatch', e.detail);
        var channel = document.querySelector('maki-channel');
        channel._send('patch', {
          channel: e.detail.key,
          ops: e.detail.patches
        });
      },
      _handleChange: function(e, detail) {
        var self = this;
        
        console.log('[QUILL:DATASTORE]', '_handleChange', e, detail);
        if (!detail) {
          var detail = e.detail;
        }
        
        var path = detail.path;
        var val = detail.val;
        var old = detail.old;
        
        /* if (!old) {
          if (val instanceof Array) {
            old = [];
          } else {
            old = {};
          }
        }
        
        if (old) {
          var worker = document.querySelector('maki-crypto-worker');
          var observer = jsonpatch.observe(old);

          console.log('[QUILL:DATASTORE]', 'extending', old, 'with', val);
          var now = _.extend(old, val);
          console.log('[QUILL:DATASTORE]', 'final:', now);
          var patches = jsonpatch.generate(observer);
          
          console.log('[QUILL:DATASTORE]', 'patch set generated:', patches);

          var channel = document.querySelectorAll('maki-channel');
          /*channel._send('patch', {
            channel: key,
            ops: [{ op: 'add',  }]
          });****
        } */
        
        var pattern = '[src="'+path+'"]';
        var elements = document.querySelectorAll(pattern);
        
        console.log('[QUILL:DATASTORE]', 'elements bound to this key:', path, elements);
        for (var i = 0; i < elements.length; i++) {
          var element = elements[i];
          element.data = val;
          element._load();
          //element._sync();
        }
      },
      _sync: function() {
        var elements = document.querySelectorAll('[src]');
        console.log('[QUILL:DATASTORE]', '_sync', elements);
        for (var i = 0; i < elements.length; i++) {
          var element = elements[i];
          if (typeof element._sync === 'function') {
            console.log('[QUILL:DATASTORE]', 'syncing', element);
            element._sync();
          }
        }
      },
      attached: function() {
        var self = this;
        console.log('[QUILL:DATASTORE]', 'attached');
      },
      ready: function() {
        var self = this;
        console.log('[QUILL:DATASTORE]', 'ready');
        document.addEventListener('key-value:tips:open', function() {
          self.tips = document.querySelector('maki-key-value[name=tips][for='+self.name+']');
        });
        document.addEventListener('key-value:'+self.name+':open', function() {
          console.log('[QUILL:DATASTORE]', 'key-value open received!');
          self.docs = document.querySelector('maki-key-value[name='+self.name+']');
          
          // disabled 2016-12-21
          //self.docs.addEventListener('key-value:change', self._handleChange.bind(self));
          
          self.fire('datastore:'+self.name+':open');
          self.fire('datastore:open');
        });
        //self.listen(self.docs, 'key-value:change', '_handleChange');
      }
    });
